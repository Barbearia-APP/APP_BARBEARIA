<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/textViewFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Nome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNameFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFragment"
        app:layout_constraintStart_toEndOf="@+id/textViewFragment"
        app:layout_constraintTop_toTopOf="@+id/textViewFragment" />

    <TextView
        android:id="@+id/textView2Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="EndereÃ§o"
        app:layout_constraintStart_toStartOf="@+id/textViewFragment"
        app:layout_constraintTop_toBottomOf="@+id/editTextNameFragment" />

    <EditText
        android:id="@+id/editTextAddressFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        app:layout_constraintBottom_toBottomOf="@+id/textView2Fragment"
        app:layout_constraintStart_toStartOf="@+id/editTextNameFragment"
        app:layout_constraintTop_toTopOf="@+id/textView2Fragment" />

    <TextView
        android:id="@+id/textView3Fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Telefone"
        app:layout_constraintStart_toStartOf="@+id/textView2Fragment"
        app:layout_constraintTop_toBottomOf="@+id/editTextAddressFragment" />

    <EditText
        android:id="@+id/editTextPhoneFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="@+id/textView3Fragment"
        app:layout_constraintStart_toStartOf="@+id/editTextAddressFragment"
        app:layout_constraintTop_toTopOf="@+id/textView3Fragment" />

    <Button
        android:id="@+id/buttonSaveFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="saveEstablishmentClickedMain"
        android:text="Salvar"
        app:layout_constraintEnd_toEndOf="@+id/editTextPhoneFragment"
        app:layout_constraintStart_toStartOf="@+id/textView3Fragment"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhoneFragment" />
</androidx.constraintlayout.widget.ConstraintLayout>